extends ./layout/app

block content  
    section(class="py-5")
        h2(class="text-center text-4xl font-extrabold pt-10") #{pagina}

        if propiedades.length 
            div(class="grid grid-cols-1 lg:grid-cols-3 mt-14 gap-5")
                each propiedad in propiedades 
                    include ./templates/card
        else 
            <p class="text-center mt-5">Sin resultados</p>
            