extends ../layout/index

block content
    div.py-10
        a(href="/auth/login")
            h1(class="hover:cursor-pointer").text-4xl.my-10.font-extrabold.text-center Bienes
                span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold #{pagina}

        if errores 
            each error in errores
                div.bg-red-100.border-l-4.border-red-500.text-red-700.p-3.text-sm.my-3.rounded-md.max-w-md.mx-auto.text-center
                    p #{error.msg}

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow.rounded-lg
                form.space-y-5(method='POST' action='/auth/registro')
                    input(type='hidden', name='_csrf', value= csrfToken)
                    div 
                        label.block.text-sm.uppmercase.text-gray-600.mb-2.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(type='text', placeholder='Tu Nombre', name='nombre', value=usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppmercase.text-gray-600.mb-2.font-bold(for="email") Email de Registro
                        input#email.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(type='text', placeholder='Tu Email', name='email', value=usuario ? usuario.email : '')   
                    div 
                        label.block.text-sm.uppmercase.text-gray-600.mb-2.font-bold(for="password") Password
                        input#password.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(type='password', placeholder='Tu Password', name='password')  
                    div 
                        label.block.text-sm.uppmercase.text-gray-600.mb-2.font-bold(for="password2") Repetir Password
                        input#password2.w-full.py-2.px-3.border.border-gray-300.rounded-md.placeholder-gray-400(type='password', placeholder='Repite tu Password', name='password2') 

                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs hover:underline") Ya tienes cuenta? Inicia Sesi√≥n
                        a(href="/auth/olvide" class="text-gray-500 text-xs hover:underline") Olvide mi Password

                    input(type='submit', value='Crear Cuenta', class='bg-indigo-500 w-full py-2 text-white uppercase font-bold rounded-md cursor-pointer hover:bg-indigo-800 transition-duration-400 ease transition-colors')