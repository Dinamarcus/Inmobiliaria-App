extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token", content=csrfToken)

block content
    div.py-10
        a(href="/auth/login")
            h1(class="hover:cursor-pointer").text-4xl.my-10.font-extrabold.text-center Bienes
                span.font-normal Raices
        h2.text-center.font-bold.text-2xl #{pagina}

        

        div(class="bg-white shadow-md rounded px-4 py-8 mx-auto container max-w-4xl my-10 md:px-10")
            form(class="space-y-8 dropzone border-dash border-2 w-full min:h-96 h-auto flex rounded flex-col justify-center items-center", method="POST", action=`/propiedades/agregar-imagen/${propiedad.id}` id="dropzoneId" enctype="multipart/form-data")
                input(type="hidden", name="_csrf", value=csrfToken) 
            
            div(class="grid space-y-2 md:space-y-0 md:flex md:justify-evenly items-center mt-2")
                input(class="bg-gray-600 w-full md:w-60  p-2 text-white uppercase hover:bg-gray-700 cursor-pointer rounded-md hover:transition-colors duration-300 ease font-semibold", type="submit", value="Agregar Imagen")
                input(class="bg-red-600  w-full md:w-60 p-2 text-white uppercase hover:bg-red-700 cursor-pointer rounded-md hover:transition-colors duration-300 ease font-semibold", type="button", value="Eliminar Imagen")

block scripts
    script(src="/js/agregarImagen.js")
